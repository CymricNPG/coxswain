<resources>

    <style name="LightTheme" parent="@android:style/Theme.Holo.Light">
        <item name="icon_more">@drawable/ic_more_vert_black_24dp</item>
        <item name="icon_share">@drawable/ic_share_black_24dp</item>
    </style>

    <style name="DarkTheme" parent="@android:style/Theme.Holo">
        <item name="icon_more">@drawable/ic_more_vert_white_24dp</item>
        <item name="icon_share">@drawable/ic_share_white_24dp</item>
    </style>

    <style name="TimelineView">
        <item name="foreground_color">?android:attr/colorForeground</item>
    </style>

    <style name="TimelineTitle">
        <item name="android:textColor">#ff3567ed</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="ValueContainer">
        <item name="android:background">@drawable/field</item>
    </style>

    <style name="LabelView">
        <item name="text_color">?android:attr/colorForeground</item>
    </style>

    <style name="ValueView">
        <item name="text_color">?android:attr/colorForeground</item>
        <item name="font">fonts/coxswain.ttf</item>
    </style>

    <style name="MenuButton" parent="@android:style/Widget.Holo.Light.Button.Borderless.Small">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarButtonStyle -->
    <style name="ButtonBarButton" />

</resources>

<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/preference_motivator_title"
        >

        <CheckBoxPreference
            android:key="@string/preference_motivator_whistle"
            android:title="@string/preference_motivator_whistle_title"
            android:summary="@string/preference_motivator_whistle_summary"
            android:defaultValue="true"
            />

        <CheckBoxPreference
            android:key="@string/preference_motivator_speak"
            android:title="@string/preference_motivator_speak_title"
            android:summary="@string/preference_motivator_speak_summary"
            android:defaultValue="true"
            />

        <CheckBoxPreference
            android:key="@string/preference_motivator_ratio_tick"
            android:title="@string/preference_motivator_ratio_tick_title"
            android:summary="@string/preference_motivator_ratio_tick_summary"
            android:defaultValue="false"
            />

        <svenmeier.coxswain.view.preference.EditTextPreference
            android:key="@string/preference_motivator_ratio"
            android:title="@string/preference_motivator_ratio_title"
            android:summary="@string/preference_motivator_ratio_summary"
            android:numeric="decimal"
            android:defaultValue="1.5"
            android:dependency="@string/preference_motivator_ratio_tick"
            />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/preference_integration_title"
        >

        <CheckBoxPreference
            android:key="@string/preference_integration_intent"
            android:title="@string/preference_integration_intent_title"
            android:summary="@string/preference_integration_intent_summary"
            android:defaultValue="false"
            />

        <svenmeier.coxswain.view.preference.EditTextPreference
            android:key="@string/preference_integration_intent_uri"
            android:title="@string/preference_integration_intent_uri_title"
            android:summary="@string/preference_integration_intent_uri_summary"
            android:defaultValue="https://www.youtube.com/playlist?list=WL&amp;playnext=1"
            android:dependency="@string/preference_integration_intent"
            />
    </PreferenceCategory>



    <PreferenceCategory
        android:title="@string/preference_hardware_title"
        >

        <Preference
            android:key="@string/preference_devices"
            android:title="@string/preference_devices_title"
            android:summary="@string/preference_devices_summary"
            />
    </PreferenceCategory>
</PreferenceScreen>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:coxswain="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    >

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <svenmeier.coxswain.view.SegmentsView
            android:id="@+id/workout_segments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            coxswain:drawable="@drawable/segment"
            coxswain:orientation="vertical"
            />
        <svenmeier.coxswain.view.LevelView
            android:id="@+id/workout_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/progress"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <svenmeier.coxswain.view.ValueContainer
            android:id="@+id/workout_value_0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/ValueContainer"
            />

        <svenmeier.coxswain.view.ValueContainer
            android:id="@+id/workout_value_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/ValueContainer"
            />

        <svenmeier.coxswain.view.ValueContainer
            android:id="@+id/workout_value_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/ValueContainer"
            />

        <svenmeier.coxswain.view.ValueContainer
            android:id="@+id/workout_value_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/ValueContainer"
            />

        <svenmeier.coxswain.view.ValueContainer
            android:id="@+id/workout_value_4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/ValueContainer"
            />

        <svenmeier.coxswain.view.ValueContainer
            android:id="@+id/workout_value_5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/ValueContainer"
            />

    </LinearLayout>

</LinearLayout>